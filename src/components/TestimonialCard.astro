---
import { StarIcon } from "lucide-react";

const { description, name, company, job, image } = Astro.props;
---

<div class="text-white max-w-[420px] bg-[#040A08]/50 flex flex-col gap-6 p-8 rounded-2xl relative bg-testimonial-card stroke-testimonial-card">
  <div class="flex gap-1">
    <StarIcon size={20} fill="white" />
    <StarIcon size={20} fill="white" />
    <StarIcon size={20} fill="white" />
    <StarIcon size={20} fill="white" />
    <StarIcon size={20} fill="white" />
  </div>
  <p class="text-lg">"{description}"</p>
  <div class="flex items-center gap-4">
    <img src={image} alt={company} class="max-w-10" />
    <div>
      <p class="font-display">{name}</p>
      <p>{job}, {company}</p>
    </div>
  </div>
</div>