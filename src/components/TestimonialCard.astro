---
import { StarIcon } from "lucide-react";

const { description, name, company, job, image } = Astro.props;
---

<div class="text-white w-full md:max-w-[420px] bg-[#040A08]/50 flex flex-col gap-4 md:gap-6 p-6 md:p-8 rounded-2xl relative bg-testimonial-card stroke-testimonial-card">
  <div class="flex gap-1">
    <StarIcon size={16} className="md:w-5 md:h-5" fill="white" />
    <StarIcon size={16} className="md:w-5 md:h-5" fill="white" />
    <StarIcon size={16} className="md:w-5 md:h-5" fill="white" />
    <StarIcon size={16} className="md:w-5 md:h-5" fill="white" />
    <StarIcon size={16} className="md:w-5 md:h-5" fill="white" />
  </div>
  <p class="text-base md:text-lg">"{description}"</p>
  <div class="flex items-center gap-3 md:gap-4">
    <img src={image} alt={company} class="w-8 md:w-10 max-w-10" />
    <div>
      <p class="font-display text-sm md:text-base">{name}</p>
      <p class="text-sm md:text-base">{job}, {company}</p>
    </div>
  </div>
</div>