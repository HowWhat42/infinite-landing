---
import footer from "../assets/footer.png";
import Footer from "./Footer.astro";
import { Badge } from "./ui/badge";
import { Button } from "./ui/button";
import { Input } from "./ui/input";
import { Textarea } from "./ui/textarea";

---

<div id="contact" class="relative min-h-screen py-20 md:py-40 px-4 md:px-16 flex flex-col items-center gap-10 md:gap-20 -mt-8">
  <img class="absolute top-0 left-0 w-full h-full -z-10" src={footer.src} alt="background-contact" fetchpriority="high" />
  <div class="bg-footer absolute top-0 right-0 w-full h-full -z-10" />
  <div class="flex flex-col gap-4 justify-center items-center max-w-3xl px-4">
    <Badge>Contactez-nous</Badge>
    <h1 class="text-center font-display text-3xl md:text-5xl font-medium text-white">Parlons de votre projet</h1>
    <p class="text-lg text-white/70 font-normal">Expliquez-nous vos besoins — on revient vers vous sous 24h, sans engagement.</p>
  </div>
  
  <form class="w-full max-w-2xl flex flex-col gap-6 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <Input 
        type="text" 
        placeholder="Nom Prénom" 
        required
      />
      <Input 
        type="email" 
        placeholder="Email" 
        required
      />
    </div>
    <Textarea 
      placeholder="Écrivez votre message" 
      rows={6}
      required
      className="max-h-32"
    ></Textarea>
    <div class="flex justify-center">
      <Button 
        type="submit"
      >
        Envoyer
      </Button>
    </div>
  </form>
  
  <Footer />
</div>